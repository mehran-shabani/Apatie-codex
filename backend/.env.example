# Django
DJANGO_SETTINGS_MODULE=core.settings.dev
SECRET_KEY=change-me
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,backend
DJANGO_ADMIN_URL=admin/

# Database (leave commented to fall back to local sqlite at backend/db.sqlite3)
# DATABASE_URL=postgres://postgres:postgres@db:5432/apatie

# Redis / Celery / Channels (defaults to in-memory when unset)
# REDIS_URL=redis://redis:6379/0

# CORS / CSRF
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://localhost:8080

# Logging
DJANGO_LOG_LEVEL=INFO

# Rate limiting
REST_FRAMEWORK__DEFAULT_THROTTLE_RATES__USER=1000/day
REST_FRAMEWORK__DEFAULT_THROTTLE_RATES__ANON=100/day

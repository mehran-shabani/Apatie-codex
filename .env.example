# Global project configuration
COMPOSE_PROJECT_NAME=apatie

# Database configuration shared with docker-compose
POSTGRES_DB=apatie
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_PORT=5432

# Default Django environment values injected via docker-compose
DJANGO_SECRET_KEY=change-me
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,backend
DJANGO_ADMIN_URL=admin/

# Service endpoints
DATABASE_URL=postgres://postgres:postgres@db:5432/apatie
REDIS_URL=redis://redis:6379/0
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://localhost:8080
